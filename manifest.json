{
  "name": "OOXML Tools",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "View, edit, analyse and compare contents of OOXML documents.",
  "offline_enabled": true,
  "background": {
    "service_worker": "background.js"
  },
  "minimum_chrome_version": "88",
  "icons": {
    "16": "res/icon16.png",
    "48": "res/icon48.png",
    "128": "res/icon128.png"
  },
  "action": {
    "default_title": "OOXML Tools"
  },
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "file://*/*"
  ]
}
